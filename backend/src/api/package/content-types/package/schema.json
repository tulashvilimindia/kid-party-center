{
  "collectionName": "packages",
  "info": {
    "singularName": "package",
    "pluralName": "packages",
    "displayName": "Package"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "required": true
    },
    "fullDescription": {
      "type": "richtext"
    },
    "durationMinutes": {
      "type": "integer",
      "required": true
    },
    "pricePerChild": {
      "type": "decimal",
      "required": true
    },
    "minGuests": {
      "type": "integer",
      "required": true
    },
    "maxGuests": {
      "type": "integer"
    },
    "includedFeatures": {
      "type": "component",
      "repeatable": true,
      "component": "common.included-feature"
    },
    "image": {
      "type": "media",
      "multiple": false
    }
  }
}
